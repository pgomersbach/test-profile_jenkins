- job:
    name: <%= @name %>-spec
    description: 'Auto generated job, do not edit this job through the web!'
    project-type: freestyle
    block-downstream: false
    scm:
    - git:
        skip-tag: true
        url: <%= @jobgiturl %>
    triggers:
      - reverse:
            jobs: <%= @name %>-start
            result: 'success'
    builders:
      - shell:
          cd $WORKSPACE;
          bundle install --path vendor/bundle;
          bundle exec rake spec;
    logrotate:
      daysToKeep: 3
      numToKeep: 2
